<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_edit_text"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/middleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1) Flag this Call?"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rgFlag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtnFlagYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/rbtnFlagNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2) Call Status?"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rgCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtnCallHold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hold" />

            <RadioButton
                android:id="@+id/rbtnCallWarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warm" />

            <RadioButton
                android:id="@+id/rbtnCallClosed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3) Exclude this Call?"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rgExclude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtnExcludeYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/rbtnExcludeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4) Remarks"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etRmrk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum 160 Characters"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />


    </LinearLayout>
</RelativeLayout>